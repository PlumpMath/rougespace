(require 'rougespace)

(tcod:console-init-root 80 50 "Test" nil :renderer-sdl)

(tcod:console-set-alignment tcod:*root* :center)
(tcod:console-print tcod:*root* 40 25 "Hello, world !" )
(tcod:console-rect tcod:*root* 20 20 20 20 nil :OVERLAY)
(tcod:console-wait-for-keypress t)
(tcod:console-flush)
(tcod:console-new 200 200)
(tcod:console-delete tcod:*root*)
