(defclass drawable ()
    ((symbol :accessor draw-symbol
	  :initform 40
	  :initarg :symbol)
  (sizex :accessor draw-sizex
	   :initform 1
	   :initarg :sizex)
  (sizey :accessor draw-sizey
	 :initform 1
	 :initarg :sizey)
  (pos :accessor draw-pos
       :initform (make-instance 'pos)
       :initarg :pos)))

;assumes that drawable is on screen
(defmethod draw  ((d drawable) xs ys)
	   (tcod:console-put-char tcod:*root* 
				  (- (pos-x (draw-pos d)) xs)
				  (- (pos-y (draw-pos d)) ys)
				  (draw-symbol d)
				  :none))
